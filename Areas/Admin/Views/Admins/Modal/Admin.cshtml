<div class="modal fade" id="addAdminModal" tabindex="-1" aria-labelledby="addAdminModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background-color: #000; border: 0.5px solid white; color: #fff; border-radius: 12px;">
            <div class="modal-header" style="border-bottom: 1px solid #333;">
                <h5 class="modal-title" style="font-weight: bold; font-size: 22px;">Yeni Yönetici Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1); border: none;"></button>
            </div>
            <div class="modal-body" style="padding: 2rem;">
                @if(ViewData["Error"] != null)
                {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Error"]
                </div>
                }
                
                <form id="adminForm" asp-controller="Admins" asp-action="Index" method="post">
                    
                    <input type="hidden" value="Admin" name="role"/>
                    
                    <div class="mb-4">
                        <label for="userName" class="form-label" style="font-weight: 500; color: #c9c9c9;">İsim</label>
                        <input name="userName" type="text" class="form-control" id="userName" placeholder="İsim" style="background-color: #2A2A2E; color: #fff; border-radius: 8px; border: none;">
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label" style="font-weight: 500; color: #c9c9c9;">E-posta</label>
                        <input name="email" type="email" class="form-control" id="email" placeholder="E-posta" style="background-color: #2A2A2E; color: #fff; border-radius: 8px; border: none;">
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label" style="font-weight: 500; color: #c9c9c9;">Şifre</label>
                        <input name="password" type="password" class="form-control" id="password" placeholder="Şifre" style="background-color: #2A2A2E; color: #fff; border-radius: 8px; border: none;">
                    </div>


                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm px-3 py-2" style="background-color: #27272a; color: #fff; border-radius: 8px; font-size: 13px;">
                            Yönetici Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

