@model ProductManagament_MVC.Models.Category

<h2 class="mb-4" style="color: black;">Yeni Kategori Oluştur</h2>

<form asp-controller="Category" asp-action="Create" method="post" style="color: black">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Kategori Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Kategori adını girin" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kategori açıklamasını girin"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-sm">Oluştur</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary btn-sm">Ana sayfaya dön</a>
    </div>
</form>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger mt-4">
    @ViewBag.Error
</div>
}
