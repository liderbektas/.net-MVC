@model ProductManagament_MVC.Models.Category

<a asp-action="Index" style="cursor:pointer; color:#fff;">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg>
</a>

<h2 class="my-4" style="font-weight: bold; font-size: 30px;">Yeni Kategori Oluştur</h2>

<form asp-controller="Category" asp-action="Create" method="post">
    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Name" class="form-label">Kategori Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Kategori adını girin"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kategori açıklamasını girin"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Oluştur</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-4">
        @ViewBag.Error
    </div>
}