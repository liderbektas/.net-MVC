@model IEnumerable<Category>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-black">Kategoriler</h2>
        <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Ekle</a>
    </div>
    
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>