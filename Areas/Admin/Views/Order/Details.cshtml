@model ProductManagament_MVC.Models.Order

<div class="container mt-5">
    <h1 class="text-black">Sipariş Detayı</h1>

    <div class="card bg-light text-black mt-4" style="border: 0.5px solid black;">
        <div class="card-body">
            <h5 class="card-title">Sipariş Bilgileri</h5>
            <p><strong>Sipariş ID:</strong> @Model.Id</p>
            <p><strong>Kullanıcı ID:</strong> @Model.UserId</p>
            <p><strong>Sipariş Tarihi:</strong> @Model.OrderDate.ToString("dd MMMM yyyy")</p>
            <p><strong>Gönderim Adı:</strong> @Model.ShippingFullName</p>
            <p><strong>Adres:</strong> @Model.ShippingStreet, @Model.ShippingCity, @Model.ShippingState, @Model.ShippingZipCode, @Model.ShippingCountry</p>
        </div>
    </div>

    <h2 class="mt-4 mb-4 text-black">Sipariş Ürünleri</h2>
    <table class="table table-striped table-hover text-black">
        <thead class="table-dark">
        <tr>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Miktar</th>
            <th>Toplam</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.OrderItems != null && Model.OrderItems.Any())
        {
        foreach (var item in Model.OrderItems)
        {
        <tr>
            <td>
                <img src="/Images/@item.Products.img" alt="@item.Products.name" class="img-fluid" style="width: 100px; height: auto;" />
            </td>
            <td>@item.Products?.name</td>
            <td>@item.Products?.description</td>
            <td>@String.Format("{0:C}", item.Products?.price)</td>
            <td>@item.Quantity</td>
            <td>@String.Format("{0:C}", item.Products?.price * item.Quantity)</td>
        </tr>
        }
        }
        else
        {
        <tr>
            <td colspan="6" class="text-center">Bu siparişe ait ürün bulunmamaktadır.</td>
        </tr>
        }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-primary">Siparişler Listesine Dön</a>
    </div>
</div>
