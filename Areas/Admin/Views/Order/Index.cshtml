@model IEnumerable<Order>

<div class="text-black">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-black">Siparişler</h2>
        <a class="btn btn-primary btn-sm" asp-action="">Yeni Ekle</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Sipariş No</th>
            <th>Kullanıcı</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Detay</a>
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>