@model Products

<h2 class="mb-4" style="color: black;">Yeni Ürün Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" style="color: black">
    <div class="form-group mb-3">
        <label asp-for="name" class="form-label">Ürün Adı</label>
        <input asp-for="name" class="form-control" placeholder="Ürün adı girin"/>
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="description" class="form-label">Açıklama</label>
        <textarea asp-for="description" class="form-control" rows="4" placeholder="Ürün açıklamasını girin"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="price" class="form-label">Fiyat</label>
        <input asp-for="price" class="form-control" type="number" step="0.01" placeholder="Fiyat girin"/>
        <span asp-validation-for="price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="img" class="form-label">Ürün Resmi</label>
        <input type="file" name="img" class="form-control" accept="image/*"/>
        <span class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-sm">Oluştur</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Ana sayfaya dön</a>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-4">
        @ViewBag.Error
    </div>
}
