@model Products

<a asp-action="Index" style="cursor:pointer; color:#fff;">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg>
</a>

<h2 class="my-4" style="font-weight: bold; font-size: 30px;">Yeni Ürün Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" style="">
    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Ürün adı girin"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün açıklamasını girin"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Price" class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Fiyat girin"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="Img" class="form-label">Ürün Resmi</label>
        <input type="file" name="img" class="form-control" accept="image/*"/>
        <span class="text-danger"></span>
    </div>

    <div class="form-group mb-3" style="width: 500px;">
        <label asp-for="CategoryId" class="form-label">Kategori</label>
        @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "Kategori Seçin", new { @class = "form-control" })
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Oluştur</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-4">
        @ViewBag.Error
    </div>
}