@model Products

<a asp-action="Index" style="cursor:pointer; color:#fff;">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg>
</a>

<div class="">
    <h2 class="my-4" style="font-size: 36px; font-weight: bold">Ürün Güncelle</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group mb-4" style="width: 500px;">
            <label asp-for="Name" class="form-label">İsim</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4" style="width: 500px;">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4" style="width: 500px;">
            <label asp-for="Price" class="form-label">Fiyat</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-4" style="width: 500px;">
            <label asp-for="Stock" class="form-label">Stok</label>
            <input asp-for="Stock" type="number" step="0.01" class="form-control"/>
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Güncelle</button>
        </div>

    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-4">
            @ViewBag.Error
        </div>
    }
</div>