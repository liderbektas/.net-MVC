@model Products

<div class="text-black">
    <h2 class="mb-4 text-black">Ürün Güncelle</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="name" class="form-label">İsim</label>
            <input asp-for="name" class="form-control"/>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="description" class="form-label">Açıklama</label>
            <textarea asp-for="description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="price" class="form-label">Fiyat</label>
            <input asp-for="price" type="number" step="0.01" class="form-control"/>
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Ana sayfaya dön</a>
        </div>

    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-4">
            @ViewBag.Error
        </div>
    }
</div>