@model IEnumerable<Products>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 style="font-weight: bold; font-size: 30px;">Ürünler</h3>
        <a class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;" asp-action="Create">Yeni Ekle</a>
    </div>

    <table style="width: 100%;">
        <thead>
        <tr class="text-start" style="font-size: 14px;">
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Id</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Resim</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">İsim</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Kategori</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Açıklama</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Fiyat</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">İşlemler</div>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td style="padding: 10px 5px;">@product.Id</td>
                <td style="padding: 10px 5px;">
                    <img src="/Images/@product.img" title="@product.name" height="34" />
                </td>
                <td style="padding: 10px 5px;">@product.name</td>
                <td style="padding: 10px 5px;">@product.Category?.Name</td>
                <td style="padding: 10px 5px;">@product.description</td>
                <td style="padding: 10px 5px;">@product.price.ToString("C")</td>
                <td style="padding: 10px 5px;">
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;">Düzenle</a>
                        @* <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="px-3 py-2 rounded-3" style="background-color: #dc2626; text-decoration: none; font-size: 14px; color:#fff;">Sil</a> *@
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
