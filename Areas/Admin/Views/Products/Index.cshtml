@model IEnumerable<Products>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 style="font-weight: bold; font-size: 30px;">Ürünler</h3>
        <a class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;" asp-action="Create">Yeni Ekle</a>
    </div>
   
    <table style="width: 100%;">
        <thead>
        <tr class="text-start" style="font-size: 14px;">
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">Resim</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">İsim</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">Kategori</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">Açıklama</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">Fiyat</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">Stok</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px; font-weight: lighter; font-size: 14px;">İşlemler</div>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">
                <img src="/Images/@product.Img" title="@product.Name" height="70" />
            </td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">@product.Name</td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">@product.Category?.Name</td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">@product.Description</td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">@product.Price.ToString("C")</td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">@product.Stock Adet</td>
            <td style="padding: 10px 5px; font-weight: lighter; font-size: 14px;">
                <div class="d-flex gap-2">
                    <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;">Düzenle</a>
                    @* <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="px-3 py-2 rounded-3" style="background-color: #dc2626; text-decoration: none; font-size: 14px; color:#fff;">Sil</a> *@
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>

    @if (!Model.Any())
    {
    <div class="mt-2 py-3 px-4" style="font-weight: lighter; background-color: #211a0e; color:#d6a30e;">Veri bulunamadı</div>
    }
</div>
