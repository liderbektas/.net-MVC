@model QuestionsViewModel

<a asp-action="Index" style="cursor:pointer; color:#fff;">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg>
</a>

<div>
    <h2 class="my-4" style="font-weight: bold; font-size: 30px;">Soru</h2>

    <form asp-area="Admin" asp-controller="Questions" asp-action="Edit" method="post">
        <input type="hidden" name="questionId" value="@Model.Questions.Id"/>

        <div class="form-group mb-3" style="width: 500px;">
            <label class="form-label">Soru</label>
            <textarea name="questionContent" class="form-control" rows="3">@Model.Questions.Question</textarea>
        </div>

        <div class="form-group mb-3" style="width: 500px;">
            <label class="form-label">Cevap</label>
            <textarea class="form-control" rows="3" name="answerContent">@Model.Answer?.Content</textarea>
        </div>

        <div class="mt-3">
            <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Cevapla</button>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
    <div class="alert alert-danger mt-4">
        @ViewBag.Error
    </div>
    }
</div>
