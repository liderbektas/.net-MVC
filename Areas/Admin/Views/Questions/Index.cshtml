@model IEnumerable<Questions>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 style="font-weight: bold; font-size: 30px;">Sorular</h3>
    </div>

    <table style="width: 100%;">
        <thead>
        <tr class="text-start" style="font-size: 14px;">
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Kullanıcı</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Ürün</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Soru</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Cevap</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Sorulma Tarihi</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">İşlemler</div>
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var question in Model)
        {
        <tr>
            <td style="padding: 10px 5px;">@question.UserId</td>
            <td style="padding: 10px 5px;">@question.ProductId</td>
            <td style="padding: 10px 5px;">@question.Question</td>
            <td style="padding: 10px 5px;">
                @foreach (var answer in ViewBag.Answer)
                {
                if (question.Id == answer.QuestionId)
                {
                if (answer.Content != null)
                {
                <p style="color: #db7219">@answer.Content</p>
                }
                else
                {
                <p class="text-danger">Soru cevaplanmadı</p>
                }
                }
                }
            </td>
            <td style="padding: 10px 5px;">@question.CreatedAt</td>
            <td style="padding: 10px 5px;">
                <div class="d-flex gap-2">
                    <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@question.Id" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;">Düzenle</a>
                   @* <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@question.Id" class="px-3 py-2 rounded-3" style="background-color: #dc2626; text-decoration: none; font-size: 14px; color:#fff;">Sil</a>*@
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
