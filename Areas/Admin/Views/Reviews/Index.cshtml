@model IEnumerable<Reviews>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-black">İncelemeler</h2>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Kullanıcı</th>
            <th>Ürün</th>
            <th>Yorum</th>
            <th>Puan</th>
            <th>Yorum Tarihi</th>
            <th>İşemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.UserId</td>
                <td>@review.ProductId</td>
                <td>@review.Review</td>
                <td class="text-warning" style="width: 150px;">
                    @for (int i = 0; i < review.Rating; i++)
                    {
                        <svg aria-hidden="true" class="rr--svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 23.77" width="16" height="16" preserveAspectRatio="xMidYMid meet">
                            <g shape-rendering="geometricPrecision">
                                <path d="M12.5,18.16l-7.73,5.61,2.95-9.08L0,9.07H9.55S12.5,0,12.5,0l2.95,9.07h9.55l-7.73,5.62,2.95,9.08-7.73-5.61Z" fill="#db711a"></path>
                            </g>
                        </svg>
                    }
                </td>
                <td>@review.CreatedAt</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>