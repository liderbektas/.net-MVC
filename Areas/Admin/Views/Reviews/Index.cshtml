@model IEnumerable<Reviews>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-black">İncelemeler</h2>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Kullanıcı</th>
            <th>Ürün</th>
            <th>Yorum</th>
            <th>Puan</th>
            <th>Yorum Tarihi</th>
            <th>İşemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.UserId</td>
                <td>@review.ProductId</td>
                <td>@review.Review</td>
                <td class="text-warning" style="width: 150px;">
                    @for (int i = 0; i < review.Rating; i++)
                    {
                        <i class="fas fa-star"></i>
                    }
                </td>
                <td>@review.CreatedAt</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>