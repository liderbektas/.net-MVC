<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ProductManagament_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ProductManagament_MVC.styles.css" asp-append-version="true"/>
</head>
<body style="background-color: #f4f4f4; font-family: Arial, sans-serif; overflow: hidden;">

<div class="d-flex">
    <nav class="navbar1 navbar-expand-sm">
        <div class="navbar-brand">
            Admin Panel
        </div>
        <div class="container-fluid">
            <ul class="navbar-nav flex-column gap-3">
                <li class="nav-item">
                    <a class="nav-link1 text-white"  asp-area="Admin" asp-controller="Main" asp-action="Index">Ana sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-white" asp-area="Admin" asp-controller="Products" asp-action="Index">Ürünler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-white" asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcılar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-white" asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-white" asp-area="Admin" asp-controller="Order" asp-action="Index">Siparişler</a>
                </li>
            </ul>
        </div>
        <div class="d-flex flex-column gap-3 position-absolute text-center" style="bottom: 20px; padding: 10px; width: 230px;">
            <a class="btn btn-primary btn-sm" asp-action="Index" asp-controller="Home" asp-area="">
                Sayfadan Ayrıl
            </a>
            <a class="btn btn-danger btn-sm w-100" asp-action="Logout" asp-controller="Logout" asp-area="Admin">
                Oturumu Kapat
            </a>
        </div>
    </nav>
    <div class="container" style="width: calc(100% - 249px);  padding: 50px; height: 100vh;  overflow-y: auto;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>