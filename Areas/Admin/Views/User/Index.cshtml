@model IEnumerable<User>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 style="font-weight: bold; font-size: 30px;">Kullanıcılar</h3>
</div>

<table style="width: 100%;">
    <thead>
    <tr class="text-start" style="font-size: 14px;">
        <th style="color:#a1a1aa; font-weight: lighter;">
            <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Id</div>
        </th>
        <th style="color:#a1a1aa; font-weight: lighter;">
            <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Kullanıcı Adı</div>
        </th>
        <th style="color:#a1a1aa; font-weight: lighter;">
            <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Email</div>
        </th>
        <th style="color:#a1a1aa; font-weight: lighter;">
            <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Rol</div>
        </th>
        <th style="color:#a1a1aa; font-weight: lighter;">
            <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">İşlemler</div>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
    <tr>
        <td style="padding: 10px 5px;">@user.Id</td>
        <td style="padding: 10px 5px;">@user.userName</td>
        <td style="padding: 10px 5px;">@user.email</td>
        <td style="padding: 10px 5px;">@(user.role == "Admin" ? "Admin" : "Müşteri")</td>
        <td style="padding: 10px 5px;">
            @if (user.role == "Admin")
            {
            <div class="d-flex gap-2">
                <a class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff;">Admin</a>
            </div>
            }
            else
            {
            <div class="d-flex gap-2">
                <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="px-3 py-2 rounded-3" style="background-color: #dc2626; text-decoration: none; font-size: 14px; color:#fff;">Sil</a>
            </div>
            }
        </td>
    </tr>
    }
    </tbody>
</table>
