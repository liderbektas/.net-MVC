@model IEnumerable<User>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-black">Kullanıcılar</h2>
</div>

<table class="table table-striped table-hover text-black">
    <thead class="table-dark">
    <tr>
        <th>Id</th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Rol</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.userName</td>
            <td>@user.email</td>
            <td>@(user.role == "Admin" ? "Admin" : "Müşteri")</td>
            <td>
                @if (user.role == "Admin")
                {
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-primary disabled">Admin</a>
                    </div>
                }
                else
                {
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
                    </div>
                }
            </td>
        </tr>
    }
    </tbody>
</table>