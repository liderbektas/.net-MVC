@model User
@{
    ViewBag.HideHeader = true;
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h2 class="text-center mb-4" style="color: black">Kayıt Ol</h2>

        <form asp-controller="Auth" asp-action="Register" method="post">
            <div class="form-group">
                <label style="color: black">Kullanıcı Adı</label>
                <input asp-for="userName" class="form-control" placeholder="Kullanıcı adı girin"/>
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="color: black">Email</label>
                <input asp-for="email" class="form-control" placeholder="E-posta adresinizi girin"/>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label style="color: black">Şifre</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Şifre giriniz"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Kaydet</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </form>

        <div class="text-center mt-3">
            <small style="color: black;">Hesabınız var mı? <a asp-action="Login">Giriş Yapın</a></small>
        </div>
    </div>
</div>