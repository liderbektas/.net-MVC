@model Cart

<div class="card" style="background-color: transparent; border: 0.5px solid #71717a;">
    <button id="bank-btn" type="button" class="form-btn btn d-flex align-items-center justify-content-start text-start px-3 py-2 w-100">
        <svg style="color:#fff;" width="32" height="28" viewBox="0 0 24 24" fill="#fff" xmlns="http://www.w3.org/2000/svg" class="me-2">
            <path d="M3 19H21M12 12V19M18 12V19M6 12V19M12.4472 3.22361L20.59 7.29502C21.4395 7.71974 21.1372 9 20.1875 9H3.81246C2.86276 9 2.56053 7.71974 3.40997 7.29502L11.5528 3.22361C11.8343 3.08284 12.1657 3.08284 12.4472 3.22361Z"></path>
        </svg>
        <div>
            <h6 class="text-white mb-1" style="font-size: 13px;">Banka Havalesi ile Öde</h6>
            <p class="mb-0" style="font-size: 13px; color: #77777e">Hesap bilgileri ile havale yapın.</p>
        </div>
    </button>

    <div id="bank-form" class="gap-3 px-3 pb-3" style="width: 500px; margin-top: 10px; display: none;">
        <div class="my-2">
            <input name="CardName" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Kart ismi">
        </div>
        <div class="mb-2">
            <input name="CardNumber" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Kart numarası">
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="">
                    <input name="LastDate" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Geçerlilik tarihi">
                </div>
            </div>
            <div class="col-md-6">
                <div class="">
                    <input name="CVV" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="CVV">
                </div>
            </div>
        </div>
    </div>
</div>