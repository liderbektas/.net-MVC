@model Cart

<div class="card" style="background-color: transparent; border: 0.5px solid #71717a;">
    <button id="credit-card-btn" type="button" class="form-btn btn d-flex align-items-center justify-content-start text-start px-3 py-2 w-100">
        <svg fill="#fff" width="32" height="28" viewBox="0 0 14 14" role="img" focusable="false" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="me-2">
            <path d="m 12,2.2 q 0.4125,0 0.70625,0.29375 Q 13,2.7875 13,3.2 v 7.6 q 0,0.4125 -0.29375,0.70625 Q 12.4125,11.8 12,11.8 H 2 Q 1.5875,11.8 1.29375,11.50625 1,11.2125 1,10.8 V 3.2 Q 1,2.7875 1.29375,2.49375 1.5875,2.2 2,2.2 H 12 z M 2,3 Q 1.91875,3 1.859375,3.0594 1.8,3.11875 1.8,3.2 V 4.6 H 12.2 V 3.2 Q 12.2,3.1188 12.1406,3.05938 12.08125,3 12,3 H 2 z m 10,8 q 0.0812,0 0.14062,-0.0594 Q 12.2,10.88125 12.2,10.8 V 7 H 1.8 v 3.8 q 0,0.0813 0.05938,0.14062 Q 1.91875,11 2,11 H 12 z M 2.6,10.2 V 9.4 h 1.6 v 0.8 H 2.6 z m 2.4,0 V 9.4 h 2.4 v 0.8 H 5 z"></path>
        </svg>
        <div>
            <h6 class="text-white mb-1" style="font-size: 13px;">Kredi Kartı ile Öde</h6>
            <p class="mb-0" style="font-size: 13px; color: #77777e">Kredi kartınızla güvenli ve hızlı ödeme.</p>
        </div>
    </button>
    <div id="card-form" class="gap-3 px-3 pb-3" style="width: 500px; margin-top: 10px; display: none;">
        <div class="my-2">
            <input name="cardName" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Kart ismi">
        </div>
        <div class="mb-2">
            <input name="cardNumber" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Kart numarası">
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="">
                    <input name="lastDate" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="Geçerlilik tarihi">
                </div>
            </div>
            <div class="col-md-6">
                <div class="">
                    <input name="cvv" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 14px; height: 50px;" type="text" class="form-control text-white" placeholder="CVV">
                </div>
            </div>
        </div>
    </div>
</div>