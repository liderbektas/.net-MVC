@model Cart

<div class="card text-white" style="background-color: #333339; width: 250px; height: 270px;">
    <div class="card-body d-flex flex-column gap-3">
        <p style="color: #ef6c17" class="card-title">Seçili ürünler (@Model.CartItems.Count)</p>
        <div class="d-flex justify-content-between">
            <h3>₺@((Model.CartItems.Sum(x => x.Products.price * x.Quantity) + 200).ToString("N0"))</h3>
        </div>
        <div class="mt-1" style="width: 240px;">
            <a asp-controller="Checkout" asp-action="Index" class="px-5 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none; text-decoration: none;">Siparişi Onayla</a>
        </div>
        <div class="d-flex justify-content-between mt-3 text-muted" style="font-size: 14px; margin-right: 35px;">
            <span>Ürünler</span>
            <span class="text-white">₺@((Model.CartItems.Sum(x => x.Products.price * x.Quantity)).ToString("N0"))</span>
        </div>
        <div class="d-flex justify-content-between text-muted" style="font-size: 14px; margin-right: 35px;">
            <span>Kargo Ücreti</span>
            <span class="text-white">₺100.00</span>
        </div>
    </div>
</div>