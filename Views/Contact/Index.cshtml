@model Contact

@{
    ViewData["Title"] = "İletişim Formu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg p-4">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Bizimle İletişime Geçin</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label for="FullName" class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" placeholder="Adınızı ve Soyadınızı giriniz" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numaranızı giriniz" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Subject" class="form-label">Konu</label>
                            <input asp-for="Subject" class="form-control" placeholder="Mesajınızın konusu" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Mesajınız</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Mesajınızı buraya yazın"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
