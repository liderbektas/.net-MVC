@model Products

@{
    ViewBag.HideHeader = false;
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="container mt-5" style="font-size: 14px;">

<div class="row g-4">
    <div class="col-md-6">
        <div>
            <img src="/Images/@Model.img" alt="@Model.name" class="img-fluid rounded shadow-lg">
        </div>
    </div>

    <div class="col-md-6">
        <h1 class="h2 mb-2 text-uppercase" style="font-weight: bold">@Model.name</h1>
        <p class="mb-2" style="line-height: 1.7; font-size: 1.1rem; color: #ef6c17">@Model.description</p>
        <div class="d-flex gap-3">
            <h5 class="font-weight-bold text-white mb-1">Fiyat :</h5>
            <p class="text-white mb-4">@Model.price.ToString("C")</p>
        </div>
        <div class="d-flex align-items-center gap-3 mt-2">
            <form id="form-@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post" style="display: flex; gap: 20px;">
                <input type="hidden" name="productId" value="@Model.Id" style="display: none;"/>
                <input type="number" name="quantity" value="1" min="1" class="form-control w-25 text-center">
                <button type="submit" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none">
                    <i class="fas fa-shopping-cart me-2"></i> Sepete Ekle
                </button>
            </form>
        </div>

        <div class="mt-5">
            <div class="d-flex justify-content-between border-top pt-3 text-white">
                <span><i class="fas fa-shipping-fast me-2"></i>Hızlı Teslimat</span>
                <span><i class="fas fa-check me-2"></i> Stokta Mevcut</span>
                <span><i class="fas fa-undo me-2"></i>Beğenmezsenin İade</span>
            </div>
        </div>
    </div>
</div>


<div>
    <ul class="nav nav-tabs mt-4 d-flex align-items-center gap-3 px-4 py-2 rounded-2" id="myTab" role="tablist" style="background-color: #3f3f46; width: 320px;">
        <li class="nav-item" role="presentation">
            <a class="nav-link text-white active" id="reviews-tab" data-bs-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="true">İncelemeler</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link text-white" id="questions-tab" data-bs-toggle="tab" href="#questions" role="tab" aria-controls="questions" aria-selected="false">Soru & Cevap</a>
        </li>
    </ul>

    <div class="tab-content mt-3" id="myTabContent">
        <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
            <div>
                @if (ViewBag.Reviews != null && ViewBag.Reviews.Count > 0)
                {
                    <div class="py-3" style="border-bottom: 0.5px solid #71717a; width: 750px;">
                        <button type="button" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none" data-bs-toggle="modal" data-bs-target="#reviewModal">
                            Yorum Yap
                        </button>
                    </div>
                    foreach (var review in ViewBag.Reviews)
                    {
                        <div class="py-2" style="width: 750px;">
                            <div class="text-muted my-2">Yorum</div>
                            <div class="bg-dark rounded-3 p-2">
                                <div class="d-flex justify-content-between align-items-center px-2 py-1">
                                    <span class="text-white" style="width: 600px">@review.Review</span>
                                    <span style="font-size: 14px; color: #ef6c17">
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                    </span>
                                </div>
                            </div>

                            <div class="text-right text-muted pt-2">
                                <span>@review.CreatedAt.ToString("dd MMMM yyyy")</span>
                                <span>•</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div style="margin-top: 70px;">
                        <div class="bg-black text-center d-flex align-items-center justify-content-center flex-column" style="border: 0.5px solid #71717a; height: 230px;" role="alert">
                            <div class="d-flex justify-content-center mb-2">
                                <svg stroke="currentColor" fill="#484848" stroke-width="0" version="1.1" viewBox="0 0 17 17" class="text-zinc-600" height="50" width="50" xmlns="http://www.w3.org/2000/svg">
                                    <g></g><path d="M15.5 0h-14c-0.827 0-1.5 0.673-1.5 1.5v10c0 0.827 0.673 1.5 1.5 1.5h0.5v4.102l4.688-4.102h8.812c0.827 0 1.5-0.673 1.5-1.5v-10c0-0.827-0.673-1.5-1.5-1.5zM16 11.5c0 0.275-0.224 0.5-0.5 0.5h-9.188l-3.312 2.898v-2.898h-1.5c-0.276 0-0.5-0.225-0.5-0.5v-10c0-0.275 0.224-0.5 0.5-0.5h14c0.276 0 0.5 0.225 0.5 0.5v10zM3 3h11v1h-11v-1zM3 5h11v1h-11v-1zM3 7h6v1h-6v-1z"></path>
                                </svg>
                            </div>
                            <div class="h5" style="color:#484848;">Ürün hakkında bir yorum bulunmuyor</div>
                            <div class="mt-3">
                                <button type="button" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                    Yorum Yap
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-black text-white" style="border: 0.5px solid white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="reviewModalLabel">Değerlendirme Yap</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="reviewForm" asp-action="Reviews" asp-controller="Products" method="post">
                            <div class="mb-3">
                                <label for="rating" class="form-label">Yıldız Değerlendirmesi</label>
                                <select name="Rating" id="rating" class="form-control bg-dark text-white" required>
                                    <option value="">Seçin</option>
                                    <option value="1">1 Yıldız</option>
                                    <option value="2">2 Yıldız</option>
                                    <option value="3">3 Yıldız</option>
                                    <option value="4">4 Yıldız</option>
                                    <option value="5">5 Yıldız</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="reviewContent" class="form-label">Yorumunuz</label>
                                <textarea name="Review" class="form-control bg-dark text-white" id="reviewContent" rows="3" required></textarea>
                            </div>
                            <input type="hidden" name="ProductId" value="@Model.Id"/>
                            <button type="submit" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab-pane" id="questions" role="tabpanel" aria-labelledby="questions-tab">
            <div>
                @if (ViewBag.Questions != null && ViewBag.Questions.Count > 0)
                {
                    <div class="py-3" style="border-bottom: 0.5px solid #71717a; width: 750px;">
                        <button type="button" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none" data-bs-toggle="modal" data-bs-target="#questionModal">
                            Soru Sor
                        </button>
                    </div>

                    @foreach (var question in ViewBag.Questions)
                    {
                        <div class="py-2" style="width: 636px;">
                            <div class="text-muted mb-2">Soru</div>
                            <div class="bg-white rounded-3 p-2">
                                <div class="d-flex justify-content-between">
                                    <span class="text-black">@question.Question</span>
                                </div>
                            </div>

                            <div class="text-right text-muted pt-2">
                                <span>@question.CreatedAt.ToString("dd MMMM yyyy")</span>
                                <span>•</span>
                            </div>

                            @{
                                var answers = ViewBag.Answers as IEnumerable<Answer>;
                            }
                            @if (ViewBag.Answers != null && answers.Any(a => a.QuestionId == question.Id))
                            {
                                <div class="mt-2">
                                    <p style="color: #ef6c17">Cevap</p>
                                    @foreach (var answer in ViewBag.Answers)
                                    {
                                        if (answer.QuestionId == question.Id)
                                        {
                                            <div class="bg-dark rounded-3 p-2 mt-2">
                                                <div class="d-flex justify-content-between">
                                                    @if (answer != null && answer.Content != null)
                                                    {
                                                        <span class="text-white">@answer.Content</span>
                                                    }
                                                </div>
                                            </div>
                                            <span class="text-end d-block mt-1 text-secondary">
                                                @{
                                                    @if (answer != null && question.CreatedAt != null && answer.CreatedAt != null)
                                                    {
                                                        var timeDifference = answer.CreatedAt - question.CreatedAt;
                                                        var hoursPassed = timeDifference.TotalHours; 

                                                        if (hoursPassed < 1)
                                                        {
                                                            <text>@(Math.Floor(timeDifference.TotalMinutes)) dakika içerisinde cevaplandı</text>; 
                                                        }
                                                        else
                                                        {
                                                            <text>@(Math.Floor(hoursPassed)) saat içerisinde cevaplandı</text>; 
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <text>Geçersiz tarih</text>; 
                                                    }
                                                }
                                            </span>
                                        }
                                    }
                                </div>
                            }
                            else
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="mt-2">
                                        <form asp-action="Answer" method="post">
                                            <input type="hidden" name="id" value="@question.Id"/>
                                            <input type="hidden" name="productId" value="@Model.Id"/>
                                            <input name="answer" class="form-control bg-dark text-white" rows="3"></input>
                                            <button type="submit" class="btn btn-outline-light mt-2">Cevapla</button>
                                        </form>
                                    </div>
                                }
                            }
                        </div>
                    }
                }

                else
                {
                    <div style="margin-top: 70px;">
                        <div class="bg-black text-center d-flex align-items-center justify-content-center flex-column" style="border: 0.5px solid #71717a; height: 230px;" role="alert">
                            <div class="d-flex justify-content-center mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" viewBox="0 0 72 72">
                                    <g xmlns="http://www.w3.org/2000/svg" fill="none" fill-rule="evenodd">
                                        <g fill-rule="nonzero">
                                            <g>
                                                <g>
                                                    <path fill="#CCC" d="M65.128 35.895c-2.48-2.495-5.843-3.896-9.35-3.895h-7.556C40.92 32 35 37.955 35 45.3c0 4.593 2.315 8.642 5.835 11.032 2.109 1.432 4.651 2.268 7.387 2.268h1.89L61.443 70V57.273C66.05 55.084 68.991 50.423 69 45.3c0-3.528-1.392-6.91-3.872-9.405z" transform="translate(-144 -244) translate(60 245) translate(85)"></path><path stroke="#484848" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M71.217 40.696c.001-4.36-1.73-8.54-4.812-11.622-3.083-3.083-7.263-4.814-11.622-4.813H45.39c-9.076 0-16.434 7.358-16.434 16.435 0 9.076 7.358 16.434 16.434 16.434h2.348l14.087 14.087V55.49c5.725-2.704 9.38-8.463 9.391-14.794h0zM19.565 38.348l-9.391 9.391V32.012C3.228 28.73-.51 21.068 1.18 13.575 2.87 6.08 9.536.765 17.217.783h9.392c7.27 0 13.676 4.773 15.755 11.739" transform="translate(-144 -244) translate(60 245) translate(85)"></path>
                                                </g>
                                            </g>
                                        </g>
                                    </g>
                                </svg>
                            </div>
                            <div class="h5" style="color:#484848;">Ürün hakkında bir soru bulunmuyor</div>
                            <div class="mt-3">
                                <button type="button" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none" data-bs-toggle="modal" data-bs-target="#questionModal">
                                    Soru Sor
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="modal fade" id="questionModal" tabindex="-1" aria-labelledby="questionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-black text-white" style="border: 0.5px solid white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="questionModalLabel">Soru Sor</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="questionForm" asp-action="AskQuestions" asp-controller="Products" method="post">
                            <div class="mb-3">
                                <label for="question" class="form-label">Sorunuz</label>
                                <textarea name="PQuestion" class="form-control bg-dark text-white" id="question" rows="3" required></textarea>
                            </div>
                            <input type="hidden" name="ProductId" value="@Model.Id"/>
                            <button type="submit" class="px-4 py-2 rounded-2" style="background-color: #ef6c17; color: white; border: none">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


</div>