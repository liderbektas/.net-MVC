@model IEnumerable<Products>

@{
ViewBag.HideHeader = false;
}

<div class="container mt-5">
    <div class="row g-4">
        @foreach (var product in Model)
        {
        <div class="col-md-6">
            <div class="card shadow-sm h-100 cursor-pointer gap-3" style="background-color: #000; color: white;">
                <div class="row g-4" style="cursor: pointer">
                    <div class="col-2" style="width: 120px">
                        <img src="/Images/@product.img" class="img-fluid rounded-start"
                             alt="@product.name" />
                    </div>
                    <div class="col-8">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">@product.name</h5>
                                <h6 class="card-subtitle mb-2">
                                    @String.Format("{0:C}", product.price)
                                </h6>
                            </div>
                            <div>
                                <p class="card-text text-truncate opacity-50" style="font-weight: lighter; font-size: 14px;">@product.description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<!-- Bootstrap JS (Opsiyonel) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
