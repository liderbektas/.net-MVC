@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ProductManagement_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ProductManagement_MVC.styles.css" asp-append-version="true"/>
</head>
<body>
@if (!ViewBag.HideHeader ?? false)
{
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-xl">
                <a class="navbar-brand" href="#" style="color: white; font-size: 24px;">zeta.</a>

                <div class="collapse navbar-collapse justify-content-center">
                    <ul class="navbar-nav gap-5">
                        <li class="nav-item">
                            <a class="nav-link" style="color: white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white" asp-controller="Products" asp-action="Index">Menü</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: white" asp-controller="" asp-action="">İletişim</a>
                        </li>
                    </ul>
                </div>

                <div class="d-flex align-items-center">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart" style="color: white"></i>
                    </a>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person" style="color: white"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        Çıkış Yap
                                    </a>
                                </li>
                                if (User.FindFirst(ClaimTypes.Role)?.Value == "Admin")
                                {
                                    <li class="nav-item">
                                        <a style="color: black;" class="nav-link" asp-controller="Area" asp-action="Index">Admin Panel</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
}

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>